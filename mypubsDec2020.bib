@article{kirwanSeaUrchinDiadema2018,
  title = {The Sea Urchin {{{\emph{Diadema}}}}{\emph{ Africanum}} Uses Low Resolution Vision to Find Shelter and Deter Enemies},
  author = {Kirwan, John D. and Bok, Michael J. and Smolka, Jochen and Foster, James J. and Hern{\'a}ndez, Jos{\'e} Carlos and Nilsson, Dan-Eric},
  year = {2018},
  month = jul,
  volume = {221},
  pages = {jeb176271},
  issn = {0022-0949, 1477-9145},
  doi = {10.1242/jeb.176271},
  abstract = {Many sea urchins can detect light on their body surface and some species are reported to possess image-resolving vision. Here, we measure the spatial resolution of vision in the long-spined sea urchin Diadema africanum, using two different visual responses: a taxis towards dark objects and an alarm response of spine-pointing towards looming stimuli. For the taxis response we used visual stimuli, which were isoluminant to the background, to discriminate spatial vision from phototaxis. Individual animals were placed in the centre of a cylindrical arena under bright down-welling light, with stimuli of varying angular width placed on the arena wall at alternating directions from the centre. We tracked the direction of movement of individual animals in relation to the stimuli to determine whether the animals oriented towards the stimulus. We found that D. africanum responds by taxis towards isoluminant stimuli with a spatial resolution in the range of 29\textendash 69 deg. This corresponds to a theoretical acceptance angle of 38\textendash 89 deg, assuming a contrast threshold of 10\%. The visual acuity of the alarm response of D. africanum was tested by exposing animals to different sized dark looming and appearing stimuli on a monitor. We found that D. africanum displays a spine-pointing response to appearing black circles of 13\textendash 25 deg angular width, corresponding to an acceptance angle of 60\textendash 116 deg, assuming the same contrast threshold as above.},
  copyright = {\textcopyright{} 2018. Published by The Company of Biologists Ltd. http://www.biologists.com/user-licence-1-1/},
  file = {C\:\\Users\\seano\\Zotero\\storage\\IL3P2IHE\\Kirwan et al. - 2018 - The sea urchin Diadema africanum uses low resoluti.pdf;C\:\\Users\\seano\\Zotero\\storage\\GX7AP7JD\\jeb176271.html},
  journal = {Journal of Experimental Biology},
  language = {en},
  number = {14},
