  journal = {Heredity},
  keywords = {*Echolocation,*Evolution,*Evolution; Molecular,*Hearing,Animals,Genetic,Humans,Mammals/classification/*genetics/physiology,Molecular,Molecular Sequence Data,Phylogeny,Proteins/*genetics/metabolism,Selection,Selection; Genetic},
  language = {eng},
